Import( Split( 'name ooe root' ) )
build = root.Clone()
build.Append( LIBS = ooe.rt.library )

if name == 'darwin':
	build.Append( LINKFLAGS = '-Wl,-install_name,@executable_path/library/libipc.dylib' )

out = build.SharedLibrary( '#/build/library/libipc', Glob( '*.cpp' ) )
build.SideEffect( Glob( '*.rpo' ), out )
