def build( context ):
    platform = context.env.platform

    context.shlib(
        linkflags = platform.shlib( 'hello' ),
        source = 'library.cpp',
        target = 'hello',
        use = 'javascript_link lua_link python_link' )

    context.program(
        source = 'server/main.cpp',
        target = 'server/hello',
        use = 'registry' )
