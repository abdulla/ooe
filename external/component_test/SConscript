Import( Split( 'name root' ) )
build = root.Clone()
build.Append( LIBS = Split( 'executable io ipc parallel registry' ) )

if name == 'posix':
	build.Append( RPATH = "'$$$${ORIGIN}/library'" )

out = build.Program( '#/build/component_test', Glob( '*.cpp' ) )
build.SideEffect( Glob( '*.rpo' ), out )
build.Clean( out, '#/build/component_test.log' )
